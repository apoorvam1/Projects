 <RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgk_img">
 
 <ScrollView
    android:layout_width="match_parent"
    android:layout_height="700dp"
    android:scrollbars="vertical"
    android:layout_weight="1" android:id="@+id/scrollView1">

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myapp.MainActivity"
     >
	
    <ImageView
        android:id="@+id/icon"
    	android:layout_width="250dp"
    	android:layout_height="250dp"
    	android:src="@drawable/apoorva"
    	android:layout_centerHorizontal="true"
    	android:layout_marginTop="4dp"
    	
        />
    
 	<ImageView
	    android:id = "@+id/fb"
	    android:layout_width="30dp"
	    android:layout_height="30dp"
        android:padding="1dp"
	    android:src="@drawable/fb_icon"
	    android:layout_below = "@+id/icon"
	    android:layout_marginTop="15dp"
	    android:layout_marginLeft="315dp"
	    />
 	
 	 	<ImageView
	    android:id = "@+id/li"
	    android:layout_width="30dp"
	    android:layout_height="30dp" 
        android:padding="1dp"
	    android:src="@drawable/linkedin_icon"
	    android:layout_below = "@+id/icon"
	    android:layout_marginTop="15dp"
	    android:layout_marginLeft="285dp"
	    />
        
	<TextView
        android:id="@+id/hdr"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="About Me"
        android:textColor="@color/white"
    />


	
    <TextView
        android:id="@+id/content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/hdr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/section1a"
        android:textColor="@color/white"
    />
    <TextView
        android:id="@+id/addncontent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/section1b"
        android:textColor="@color/white"
    />



</RelativeLayout>
		
</ScrollView>	

</RelativeLayout>